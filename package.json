{
    "name": "boilerplate-clean-architecture",
    "version": "1.0.0",
    "description": "",
    "main": "main.js",
    "scripts": {
        "dev": "npx nodemon",
        "build": "rimraf ./build && tsc",
        "start": "node build/src/app.js",
        "lint": "npx prettier --check ./src",
        "lint:fix": "npx prettier --write ./src",
        "cron:run": "node build/src/cron/$npm_config_name.cron",
        "seed:run": "node build/src/database/seeds/$npm_config_name.seed",
        "make:migration": "npx sequelize-cli migration:generate --name $npm_config_name --migrations-path src/database/sequelize/migrations",
        "migrate": "npx sequelize-cli db:migrate --config build/src/migrater.js --migrations-path build/src/database/sequelize/migrations",
        "migrate:rollback": "npx sequelize-cli db:migrate:undo --config build/src/migrater.js --migrations-path build/src/database/sequelize/migrations",
        "test": "APP_ENV=test APP_LOG=error npx jest"
    },
    "keywords": [
        "clean-architecture",
        "nodejs",
        "typescript",
        "express",
        "javascript",
        "sequelize",
        "mongoose",
        "boilerplate"
    ],
    "author": "ayocodingit",
    "license": "MIT",
    "devDependencies": {
        "@types/compression": "^1.7.2",
        "@types/cors": "^2.8.13",
        "@types/express": "^4.17.15",
        "@types/i18n": "^0.13.6",
        "@types/jest": "^29.5.0",
        "@types/jsonwebtoken": "^9.0.1",
        "@types/multer": "^1.4.11",
        "@types/node": "^18.11.18",
        "@types/sequelize": "^4.28.19",
        "@types/supertest": "^6.0.2",
        "jest": "^29.5.0",
        "nodemon": "^2.0.20",
        "prettier": "2.8.2",
        "rimraf": "^3.0.2",
        "supertest": "^6.3.4",
        "ts-jest": "^29.1.0",
        "ts-node": "^10.9.1",
        "tslib": "^2.6.2",
        "typescript": "^4.9.4"
    },
    "dependencies": {
        "axios": "^1.7.4",
        "body-parser": "^1.20.3",
        "compression": "^1.7.4",
        "cors": "^2.8.5",
        "date-fns": "^3.0.6",
        "dotenv": "^16.0.3",
        "express": "^4.21.0",
        "express-rate-limit": "^7.2.0",
        "helmet": "^6.0.1",
        "http-status": "^1.6.2",
        "i18n": "^0.15.1",
        "joi": "^17.7.0",
        "jsonwebtoken": "^9.0.0",
        "multer": "^1.4.5-lts.1",
        "mysql2": "^3.9.8",
        "redis": "^4.5.1",
        "sequelize": "^6.35.2",
        "sequelize-cli": "^6.6.2",
        "winston": "^3.8.2"
    }
}
